<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="tugas_belajar.karyawan_form">
            <field name="name">Form Karyawan</field>
            <field name="model">tugas_belajar.tugas_belajar_karyawan</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div style="margin: 0px 0px 20px 0px">
                            <h2>Form Karyawan</h2>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="jabatan"/>
                                <field name="manager"/>
                            </group>
                            <group>
                                <field name="jenis_kelamin"/>
                                <field name="tanggal_lahir"/>
                                <field name="project" widget="many2many_tags"/>
                                <field name="komisi"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
