<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="appschef.list">
      <field name="name">appschef list</field>
      <field name="model">appschef.appschef</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="appschef.action_window">
      <field name="name">appschef window</field>
      <field name="res_model">appschef.appschef</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="appschef.action_server">
      <field name="name">appschef server</field>
      <field name="model_id" ref="model_appschef_appschef"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="appschef" id="appschef.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="appschef.menu_1" parent="appschef.menu_root"/>
    <menuitem name="Menu 2" id="appschef.menu_2" parent="appschef.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="appschef.menu_1_list" parent="appschef.menu_1"
              action="appschef.action_window"/>
    <menuitem name="Server to list" id="appschef" parent="appschef.menu_2"
              action="appschef.action_server"/>

  </data>
</odoo>