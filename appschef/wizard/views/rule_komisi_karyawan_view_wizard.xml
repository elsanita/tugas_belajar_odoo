<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="form_rule_komisi_karyawan_wizard">
            <field name="name">Wizard Rule Komisi Karyawan</field>
            <field name="model">rule.komisi.karyawan.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="produk"/>
                            </group>
                            <group>
                                <field name="persentase_komisi"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Tambah" name="add_rule" type="object" class="btn-primary"/>
                        <button string="Batal" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>